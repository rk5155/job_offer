<div class="p-users">
    <div class="p-users__left">
        <ul>
            <li class="p-users__tab p-users__tab--active">会員情報</li>
            <li class="p-users__tab">応募した求人</li>
        </ul>
    </div>

    <div class="p-users__right">

        <div class="p-users__content p-users__content--show">
            <div class="p-users__box">
                <h2 class="c-heading__h2--bold u-mb20">アカウント情報</h2>
                <dl>
                    <dt>メールアドレス</dt>
                    <dd class="u-mb20"><%= @user_devise.email %></dd>

                    <dt>パスワード</dt>
                    <dd>●●●●●●●●</dd>
                </dl>

                <button class="c-btn__change u-mt50"><%= link_to "変更", edit_user_devise_registration_path(name: "アカウント情報変更") %></button>
            </div>

            <div class="p-users__box">
                <h2 class="c-heading__h2--bold u-mb20">プロフィール</h2>
                
                <table>
                    <tbody>
                        <tr>
                            <th>氏名</th>
                            <td><%= @user_devise.name %></td>
                        </tr>
                        <tr>
                            <th>ふりがな</th>
                            <td><%= @user_devise.furigane %></td>
                        </tr>
                        <tr>
                            <th>生年月日</th>
                            <td><%= @user_devise.birthday %></td>
                        </tr>
                        <tr>
                            <th>性別</th>
                            <td><%= @user_devise.sex %></td>
                        </tr>
                        <tr>
                            <th>現在の職業</th>
                            <td><%= @user_devise.profession %></td>
                        </tr>
                        <tr>
                            <th>直近の職務経歴</th>
                            <td><%= @user_devise.career %></td>
                        </tr>
                        <tr>
                            <th>電話番号</th>
                            <td><%= @user_devise.number %></td>
                        </tr>
                        <tr>
                            <th>住所</th>
                            <td><%= @user_devise.address %></td>
                        </tr>
                        <tr>
                            <th>備考・PR</th>
                            <td><%= @user_devise.pr %></td>
                        </tr>
                    </tbody>
                </table>

                <button class="c-btn__change u-mt50"><%= link_to "変更", edit_user_devise_registration_path(name: "プロフィール変更") %></button>
            </div>

        </div>

        <div class="p-users__content">

            <h2 class="u-mb20">応募した求人　<%= @jobs.length() %>件</h2>

            <ul>
                <% @jobs.each do |item| %>
                    <li>
                        <h3>
                            <a href="/scrapings/<%= item.job_url %>">
                                <%= item.job_title %>
                            </a>
                        </h3>
                    </li>
                <% end %>
            </ul>

        </div>

        
        
    </div>
</div>