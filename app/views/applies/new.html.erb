<div class="p-app-screen">
  <div class="p-app-screen__title">
    <h2 class="c-heading__h2--bold u-mb10"><%= @title %></h2>
    <p><%= @name %></p>
  </div>
  
  <div class="p-app-screen__form">
    <%= form_for(@apply) do |f| %>

      <div class="p-app-screen__field">
        <%= f.label :氏名 %>
        <%= f.text_field :name %>
      </div>

      <div class="p-app-screen__field">
        <%= f.label :電話番号 %>
        <%= f.text_field :number %>
      </div>
      
      <div class="p-app-screen__field">
        <%= f.label :アドレス %>
        <%= f.email_field :email %>
      </div>

      <div class="p-app-screen__field p-app-screen__field--none">
        <%= f.label :企業id %>
        <%= f.number_field :company_id, :value =>"#{@id}" %>
      </div>

      <% if user_devise_signed_in? %>
        <div class="p-app-screen__field p-app-screen__field--none">
          <%= f.label :ユーザーid %>
          <%= f.number_field :user_id, :value =>"#{current_user_devise.id}" %>
        </div>
      <% end %>

      <div class="p-app-screen__field p-app-screen__field--none">
        <%= f.label :求人タイトル %>
        <%= f.text_field :job_title, :value =>"#{@title}" %>
      </div>

      <div class="p-app-screen__field p-app-screen__field--none">
        <%= f.label :求人URL %>
        <%= f.text_field :job_url, :value =>"#{@job_url}" %>
      </div>

      

      <%= f.submit "応募する", class: "c-btn__to-application u-mt50" %>

      
      
    <% end %>
  </div>
  
</div>
