<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@apply) do |f| %>

      <%= f.label :氏名 %>
      <%= f.text_field :name %>

      <%= f.label :電話番号 %>
      <%= f.number_field :number %> <br><br>

      <%= f.label :アドレス %>
      <%= f.email_field :email %><br><br>

      <%= f.label :企業id %>
      <%= f.number_field :company_id, :value =>"#{@id}" %><br><br>


      <%= f.submit "応募する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

